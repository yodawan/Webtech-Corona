<div class="row">
  	<div class="col-sm-6">   
     	<h1>Register Page</h1>

		<form class="form-horizontal" id="registerform">
		  <fieldset>
		    <div class="form-group">
		      <label for="registerformusername" class="col-lg-2 control-label">Username</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="registerformusername" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <label for="registerformpassword" class="col-lg-2 control-label">Password</label>
		      <div class="col-lg-10">
		        <input type="password" class="form-control" id="registerformpassword" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <div class="col-lg-10 col-lg-offset-2">
		      	<a href="#login" class="btn btn-info">
     			    Login
     		    </a>
     		    <a href="#forgotpassword" class="btn btn-info">
     			     Forgot Password
     		     </a>
		        <button type="submit" class="btn btn-primary">Submit</button>
		      </div>
		    </div>
		  </fieldset>
		</form>
  	</div>
</div>