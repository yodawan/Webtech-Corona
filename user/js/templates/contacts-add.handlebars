<div class="row">
   <div class="col-sm-6">   
      <h1>Add Bookings<h1/>  

		<form class="form-horizontal" id="formadd">
		  <fieldset>
		    <div class="form-group">
		      <label for="addname" class="col-lg-2 control-label">Your Name</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="addname" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <label for="addemail" class="col-lg-2 control-label">Phone No.</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="addemail" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <label for="addmobileno" class="col-lg-2 control-label">Total Person</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="addmobileno" required>
		      </div>
		    </div>
			<div class="form-group">
		      <label for="addgender" class="col-lg-2 control-label">Travel Package</label>
		      <div class="col-lg-10">
		        <select class="form-control" id="addgender">
		        	 <option value='-1' selected>Please select your travel</option>
		        	 <option value='0'>Egypt</option>
		        	 <option value='1'>France</option>
		        </select>
		      </div>
		    </div>    
		    <div class="form-group">
		      <div class="col-lg-10 col-lg-offset-2">
		        <button type="reset" class="btn btn-default" id="formaddcancel">Cancel</button>
		        <button type="submit" class="btn btn-primary">Submit</button>
		      </div>
		    </div>
		  </fieldset>
		</form>    
   </div>
</div>