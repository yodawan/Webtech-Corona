<div class="row">
   <div class="col-sm-6">   
      	<h1>This is profile</h1>

		<form class="form-horizontal" id="formupdateprofile">
		  <fieldset>
		    <div class="form-group">
		      <label for="updateprofilename" class="col-lg-2 control-label">Name</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="updateprofilename" value="{{name}}" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <label for="updateprofileemail" class="col-lg-2 control-label">Email</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="updateprofileemail" value="{{email}}" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <label for="updateprofilemobileno" class="col-lg-2 control-label">Mobile No</label>
		      <div class="col-lg-10">
		        <input type="text" class="form-control" id="updateprofilemobileno" value="{{mobileno}}" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <div class="col-lg-10 col-lg-offset-2">
		      	<a href="#profile/passwordreset" class="btn btn-info" id="passwordreset">
     				<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Password Reset
     			</a>

		        <button type="submit" class="btn btn-primary">Submit</button>
		      </div>
		    </div>
		  </fieldset>
		</form>
   </div>
</div>