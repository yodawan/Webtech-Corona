			  			<tbody>
				   		{{#each bookinglistttt}}
				   	   	<tr>
					      	<td class='index-column'></td>

					      	<td>{{ name }}</td>
						  	<td>{{ totalPerson }}</td>
						  	<td>{{ phoneNo }}</td>
						  	<td>{{ idTravel }}</td>
						  	<td>{{ dateTravel }}</td>
						  	{{!--<td>
					      		<a href="javascript:;" class="" style="text-decoration: none">
					      		{{{ displaystatustype3 status }}}
					      		</a>
					      	</td>--}}
